<div class="content">
  <p class="posted_time">
  Created at <%= tweet.created_at %>, Updated at <%= tweet.updated_at %>
  </p>
  <div class="text">
    <%= simple_format(tweet.text) %>
  </div>
  <div class="button">
    <ul>
      <li>
        <%= link_to 'show', "/tweets/#{tweet.id}", method: :get %>
      </li>
      <% if user_signed_in? && tweet.user_id == current_user.id %>
        <li>
          <%= link_to 'edit', "/tweets/#{tweet.id}/edit", method: :get%>
        </li>
        <li>
          <%= link_to 'destroy', "/tweets/#{tweet.id}", method: :delete %>
        </li>
      <% end %>
    </ul>
  </div>
</div>