<div class="content">
  <div class="text">
    <%= simple_format(tweet.text) %>
  </div>
  <div class="button">
    <ul>
      <li>
        <%= link_to 'show', tweets_path, method: :get %>
      </li>
      <li>
        <%= link_to 'edit', "/tweets/#{tweet.id}/edit", method: :get%>
      </li>
      <li>
        <%= link_to 'destroy', "/tweets/#{tweet.id}", method: :delete %>
      </li>
    </ul>
  </div>
</div>